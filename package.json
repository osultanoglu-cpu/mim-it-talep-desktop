{
  "name": "mim-it-talep",
  "version": "2.0.6",
  "description": "MİM IT Talep, Bildirim ve Uzaktan Destek Sistemi",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "MİM IT",
  "license": "MIT",
  "devDependencies": {
    "canvas": "^3.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-store": "^8.1.0",
    "socket.io-client": "^4.7.2"
  },
  "build": {
    "appId": "com.mim.it-talep",
    "productName": "MİM IT Talep",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "keywords": []
}
